@article{roedigerOptimizingMeasurementSample2024,
  title = {Optimizing the Measurement of Sample Entropy in Resting-State {{fMRI}} Data},
  author = {Roediger, Donovan J. and Butts, Jessica and Falke, Chloe and Fiecas, Mark B. and {Klimes-Dougan}, Bonnie and Mueller, Bryon A. and Cullen, Kathryn R.},
